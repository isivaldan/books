<p id="notice"><%= notice %></p>

<h1>Books</h1>
<%= search_form_for @q, method: :get do |f| %>
  <%= f.select(:status_eq, options_for_select(Book.statuses, @q.status_eq )) %>
  <%= f.submit 'Filtrar'%>
<% end %>
<table>
  <thead>
    <tr>
      
      <th><%= sort_link(@q, :title) %></th>
      <th>Content</th>
      <th>Author</th>
     
      <th><%= sort_link(@q, :status) %></th>
      <th>Borrowed at</th>
      <th>Returned at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.content %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.borrowed_at %></td>
        <td><%= book.returned_at %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
